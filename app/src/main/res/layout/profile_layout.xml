<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textProfile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/barColor"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:outlineAmbientShadowColor="#757575"
            android:paddingHorizontal="15dp"
            android:text="Profile"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="15dp"
            android:text="Name"
            android:textColor="@color/textColor" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="15dp"
            android:text="Email"
            android:textColor="@color/textColor" />

        <Button
            android:id="@+id/buttonLogin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#FFFFFF"
            android:onClick="loginClick"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/textColor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/typographyLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/themeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLayout">>

        <TextView
            android:id="@+id/textTypography"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/barColor"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:outlineAmbientShadowColor="#757575"
            android:paddingHorizontal="15dp"
            android:text="Typography"
            android:textAlignment="textStart"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:id="@+id/typefaceLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="auto"
            android:onClick="typefaceClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTypeface"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:drawableLeft="@drawable/typeface_icon"
                android:drawablePadding="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="Typeface"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/textCurrentTypeface"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="Monospace"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fontSizeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="auto"
            android:onClick="fontSizeClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textFontSize"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:drawableLeft="@drawable/fontsize_icon"
                android:drawablePadding="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="Font Size"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/textCurrentFontSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="Small"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineHeightLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="auto"
            android:onClick="lineHeightClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textLineHeight"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:drawableLeft="@drawable/lineheight_icon"
                android:drawablePadding="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="Line Height"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/textCurrentLineHeight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                tools:ignore="RtlCompat" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/lineWidthLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="auto"
            android:onClick="lineWidthClick"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textLineWidth"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:drawableLeft="@drawable/linewidth_icon"
                android:drawablePadding="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="Line Width"
                android:textColor="@color/textColor" />

            <TextView
                android:id="@+id/textCurrentLineWidth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:text="10"
                android:textAlignment="textEnd"
                android:textColor="@color/textColor"
                tools:ignore="RtlCompat" />
        </LinearLayout>

        <Switch
            android:id="@+id/switchLigatures"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ligature_icon"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="15dp"
            android:showText="false"
            android:text="Ligatures"
            android:textAlignment="textStart"
            android:textColor="@color/textColor" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/themeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typographyLayout">

        <TextView
            android:id="@+id/textTheme"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/barColor"
            android:elevation="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:outlineAmbientShadowColor="#757575"
            android:paddingHorizontal="15dp"
            android:text="Theme"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switchDarkLight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/darklight_icon"
            android:drawablePadding="10dp"
            android:fontFamily="sans-serif"
            android:paddingHorizontal="15dp"
            android:text="Dark/Light"
            android:textColor="@color/textColor" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>